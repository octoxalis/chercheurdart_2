        <label for="{{C_o.INPUT_ID_s}}_{{stat_s}}_img" data-legend="{{C_o.NAV_LEGEND_o.stat_close.legend_s}}"><span data-icon="substat_op">{{C_o.NAV_LEGEND_o.stat_close.icon_s}}</span></label>
      </nav>
    </aside>
    <canvas id="canvas_{{stat_s}}_settings"></canvas>
    <aside id="{{stat_s}}_settings_state">
    </aside>
  </div>

  <script id=script_{{stat_s}} data-src="/assets/scripts/js/{{stat_s}}.min.js"></script>
